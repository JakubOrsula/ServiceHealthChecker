@using ServiceHealthChecker.Components.Services;
@using ServiceHealthChecker.Components.History;
@using ServiceHealthChecker.Components.Navigator;
<StyleSheet Resource="Style.css" Assembly="GetType().Assembly" />
<ScrollView>
    <StackLayout>
        <Navigator OnNavigationClickCallback="@setView"/>
        @switch (_currView)
        {
            case AvailableViews.Services:
                <ServicesView />
                break;
            case AvailableViews.History:
                <HistoryView />
                break;

        }
    </StackLayout>
</ScrollView>






@code {
    public enum AvailableViews
    {
        Services,
        History
    }

    private AvailableViews _currView = AvailableViews.Services;

    private void setView(AvailableViews newView)
    {
        _currView = newView;
    }

}