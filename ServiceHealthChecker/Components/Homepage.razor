@using ServiceHealthChecker.Components.Services;

<ScrollView>
    <StackLayout>
        <ServiceHealthChecker.Components.Navigator.Navigator OnNavigationClickCallback="@setView" />
        @switch (_currView)
        {
            case Homepage.AvailableViews.Validators:
                <Label Text="Validators"></Label>
                break;
            case AvailableViews.Services:
                <ServicesView />
                break;
            case AvailableViews.History:
                <Label Text="History time"></Label>
                break;

        }
    </StackLayout>
</ScrollView>






@code {
    public enum AvailableViews
    {
        Validators,
        Services,
        History
    }

    private AvailableViews _currView = AvailableViews.Services;

    private void setView(AvailableViews newView)
    {
        _currView = newView;
    }

}