@foreach (var entry in Entries)
{
    <StackLayout Orientation="XF.StackOrientation.Horizontal">
        <Entry Placeholder="Key" @bind-Text="@entry.Key" ClearButtonVisibility="XF.ClearButtonVisibility.WhileEditing" HorizontalOptions="XF.LayoutOptions.FillAndExpand"/>
        <Entry Placeholder="Value" @bind-Text="@entry.Value" ClearButtonVisibility="XF.ClearButtonVisibility.WhileEditing" HorizontalOptions="XF.LayoutOptions.FillAndExpand"/>
    </StackLayout>
}
<Button Text="New pair" OnClick="@AddEntryCallback" HorizontalOptions="XF.LayoutOptions.Center" StyleClass="btn btn-outline-secondary"/>


@using ServiceHealthChecker.DB.Models;
@code {

    [Parameter]
    public IEnumerable<KeyValueColumn> Entries { get; set; }

    [Parameter]
    public EventCallback AddEntryCallback { get; set; }
}
