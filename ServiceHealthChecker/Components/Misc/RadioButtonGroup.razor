<StackLayout Orientation="XF.StackOrientation.Horizontal">
    @foreach (var item in Items)
    {
        @if (SelectedItem != item.i)
        {
            <Button Text="@(item.v)"
                    OnClick="@(() => SetItem.InvokeAsync(item.i))"
                    HorizontalOptions="XF.LayoutOptions.FillAndExpand"
                    StyleClass="btn btn-dark" />
        }
        else
        {
            <Button Text="@(item.v)"
                    OnClick="@(() => SetItem.InvokeAsync(defaultItemIndex))"
                    HorizontalOptions="XF.LayoutOptions.FillAndExpand"
                    StyleClass="btn btn-success" />
        }

    }
</StackLayout>

@code {

    /// <summary>
    /// This is simple Enum -> RadioButtonGroup component. For speed and simplicity reasons  0 based enum without [Flags] is assumed.
    /// </summary>
    ///

    public class RBItem
    {
        public int i { get; set; }
        public string v { get; set; }
    }

    [Parameter]
    public int SelectedItem { get; set; }

    [Parameter]
    public int defaultItemIndex { get; set; }

    [Parameter]
    public IEnumerable<(int i, string v)> Items { get; set; }

    [Parameter]
    public EventCallback<int> SetItem { get; set; }


}
